/* components/mileage/mileage.wxss */

.wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 1);
}

.control {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  margin-top: 6.3vh;
  width: 100%;
}

.cancle {
  width: 3.1vw;
  height: 3.1vw;
  font-size: 0;
  margin-left: 3.1vw;
  margin-right: 15.3vw;
}

.cancle>.image {
  width: 100%;
  height: 100%;
}

.message {
  width: 56.9vw;
  height: 10.3vh;
  background-image: linear-gradient(0deg, rgba(255, 255, 255, 0.15) 0%, rgba(104, 104, 104, 0.10) 100%);
  border: 1px solid #333333;
  display: flex;
  align-items: center;
}

.messageinput {
  width: 46vw;
  height: 100%;
  display: flex;
  align-items: center;
  font-family: FZLTHPro--GB1-4;
  font-size: 1.78vw;
  color: rgba(255, 255, 255, 0.3);
  box-sizing: border-box;
  padding-left: 1.8vw;
  overflow: hidden;
}

.clearicon {
  width: 2.2vw;
  height: 2.2vw;
  flex: none;
}

.messageline {
  width: 0.1vw;
  height: 5.1vh;
  opacity: 0.4;
  background-image: linear-gradient(179deg, #e6e6e6 3%, rgba(104, 104, 104, 0.80) 100%);
  margin-left: 1.3vw;
}

.submitbtn {
  width: 7.1vw;
  height: 7.7vh;
  line-height: 7.7vh;
  text-align: center;
  box-sizing: border-box;
  opacity: 0.8;
  font-family: FZLTHPro--GB1-4;
  font-size: 1.78vw;
  color: #fff;


}

.tips {
  /* width: 48.1vw; */
  margin-left: 23.3vw;
  font-family: PingFangSC-Regular;
  font-size: 3.8vh;
  color: #fe4952 !important;
  margin-top: 1.3vh;
}

.datakeys {
  position: absolute;
  width: 56.9vw;
  height: 67.3vh;
  bottom: 0;
  left: 21.5%;
  background: #222223;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.datas {
  width: 54.7vw;
  height: 60.9vh;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  justify-content: space-between;
}

.pressbtn {
  width: 17.5vw !important;
  height: 12.8vh !important;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 2vw;
  color: #fff;
}

.pressbtn .image {
  width: 2.23vw !important;
  height: 2.23vw !important;
}

/* 输入数字的颜色 */

.cutTainColor {
  color: #fff !important;
}

/* 删除按键的颜色 */

.deletedStyles {
  background-image: linear-gradient(180deg, rgba(255, 255, 255, 0.04) 2%, rgba(0, 0, 0, 0.16) 100%);
  border: 0.1vh solid #565657;
}

/* 其他按键的颜色 */

.otherButtons {
  background-image: linear-gradient(0deg, rgba(255, 255, 255, 0.04) 0%, rgba(255, 255, 255, 0.16) 98%);
  border: 0.1vh solid #696969;
}

/* 点击态的颜色 */

.pressbtnCut {
  background-image: linear-gradient(0deg, rgba(255, 255, 255, 0.04) 0%, rgba(0, 0, 0, 0.16) 98%);
}

/* 输入错误边框线的颜色 */

.cutBorder {
  border: 0.1vh solid #fe4952 !important;
    margin-left: 23.3vw;
  font-family: PingFangSC-Regular;
  font-size: 3.8vh;
  margin-top: 1.3vh;
}

/* 输入错误字体改变颜色 */

.hintColor {
  color: #fe4952 !important;
}

/* 输入数字的颜色 */

.cutColor {
  color: #fff !important;
}