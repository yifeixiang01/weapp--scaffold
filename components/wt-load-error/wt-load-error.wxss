/* components/wt-load-error/wt-load-error.wxss */
.error-wrapper {
  width: inherit;
  height: inherit;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.load-error-img {
  width: 32.1vh;
  height: 32.1vh;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}
.load-error-img .img {
  width: 100%;
  height: 100%;
}
.content {
  font-family: Helvetica;
  font-size: 5.128vh;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 0;
  text-align: center;
  line-height: 5.769vh;
  margin-top: 6.4vh;
}
.load-error-btn, .networkError-error-btn {
  width: 50vh;
  height: 12.8vh;
  background-image: linear-gradient(90deg, #0381f1 0%, #27abf8 100%);
  border-radius: 2.564vh;
  font-family: PingFangSC-Regular;
  font-size: 5.128vh;
  letter-spacing: 0;
  color: #fff;
  text-align: center;
  line-height: 12.8vh;
  margin-top: 3.846vh;
}